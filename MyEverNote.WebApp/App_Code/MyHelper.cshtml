@helper ModalPopup(string id = "myModal", string title = "Modal Title", bool closebtn = true, bool savebtn = false)
{
    <div class="modal fade" id=@id name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id+"_title")">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="background-color:blue" id="@(id+"_header")">
                    <div class="col-sm-10">
                        <h4 class="modal-title" style="color:white" id="@(id+"_title")">@title</h4>
                    </div>
                    <div class="col-sm-2">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <div class="modal-body" id="@(id+"_body")">
                </div>
                <div class="modal-footer" id="@(id+"_footer")">
                    @if (closebtn)
                    {
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    }
                    @if (savebtn)
                    {
                        <button type="button" id="@(id+"_savebtn")" class="btn btn-primary" data-dismiss="modal">
                            <span style="color:white">Save</span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    //data - toggle = "modal" data - target = "#myModal"
}

